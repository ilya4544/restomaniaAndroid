<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restomania.restomania">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/label_user_login">

        <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".WaiterActivity"
            android:label="@string/label_waiter_activity" />
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/label_user_profile" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/label_user_registration"></activity>

    </application>

</manifest>
