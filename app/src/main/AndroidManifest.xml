<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restomania.restomania" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="Restomania">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".WaiterActivity"
            android:label="Текущий официант" >
        </activity>
        <activity
            android:name=".WaiterListActivity"
            android:label="Список официантов" >
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="Ваш профиль" >
        </activity>
    </application>

</manifest>
